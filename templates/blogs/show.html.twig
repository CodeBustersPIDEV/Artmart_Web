body %}
<h1>Blogs</h1>

<table class="table">
	<tbody>
		<tr>
			<th>Blogs_ID</th>
			<td>{{ blog.getBlogsId() }}</td>
		</tr>
		<tr>
			<th>Blog's media</th>
			<td><img src="{{ blog_media.getFilePath() }}" alt="Example" /></td>
		</tr>
		<tr>
			<th>Title</th>
			<td>{{ blog.title }}</td>
		</tr>
		<tr>
			<th>Content</th>
			<td>{{ blog.content }}</td>
		</tr>
		<tr>
			<th>Date</th>
			<td>{{ blog.date ? blog.date|date('Y-m-d ') : '' }}</td>
		</tr>
		<tr>
			<th>Rating</th>
			<td>{{ blog.rating }}</td>
		</tr>
		<tr>
			<th>NbViews</th>
			<td>{{ blog.nbViews }}</td>
		</tr>
	</tbody>
</table>

<a href="{{ path('app_blogs_index') }}">back to list</a>

