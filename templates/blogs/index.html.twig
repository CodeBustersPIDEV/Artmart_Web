block body %} {% import "base.html.twig" as base %}
<link rel="stylesheet" href="{{ asset('assets/Blog/CSS/BlogList.css') }}" />
<h1>Blogs index</h1>

{#
<table class="table" border="2">
	<thead>
		<tr>
			<th>Blogs_ID</th>
			<th>Title</th>
