				>
				<a href="{{ path('app_blogs_edit', { blogs_ID: blog.getBlogsId() }) }}"
					>edit</a
				>
			</td>
		</tr>
		{% else %}
		<tr>
			<td colspan="7">no records found</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
#}
<section class="articles">
	{% for blog in blogs %}
	{{ base.card(blog) }}
	{% else %}
	<h2>no records found</h2>
	{% endfor %}
</section>
<a href="{{ path('app_blogs_new') }}">Create new</a>
{% endblock %}
