{% extends 'baseF.html.twig' %} {% block content %} {% import "base.html.twig"
as base %}
<link
	rel="stylesheet"
	href="{{ asset('plugins/fontawesome-free/css/all.min.css') }}"
/>
<link rel="stylesheet" href="{{ asset('assets/Blog/CSS/BlogList.css') }}" />
<style>
	.articles {
		/* display: flex;
		justify-content: center;
		align-items: center;
		flex-wrap: wrap; */

		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: space-between;
		align-items: center;
		align-content: center;
		margin-top: -20px;
	}

	/* For Tablet View */
	@media screen and (min-device-width: 768px) and (max-device-width: 1024px) {
		.articles {
			display: flex;
			justify-content: center;
			align-items: center;
			flex-wrap: wrap;
		}
	}

	/* For Mobile Portrait View */
	@media screen and (max-device-width: 480px) and (orientation: portrait) {
		.articles {
			display: flex;
			justify-content: center;
			align-items: center;
			flex-wrap: wrap;
		}
	}

	/* For Mobile Landscape View */
	@media screen and (max-device-width: 640px) and (orientation: landscape) {
		.articles {
			display: flex;
			justify-content: center;
			align-items: center;
			flex-wrap: wrap;
		}
	}

	/* For Mobile Phones Portrait or Landscape View */
	@media screen and (max-device-width: 640px) {
		.articles {
			display: flex;
			justify-content: center;
			align-items: center;
			flex-wrap: wrap;
		}
	}
	.btn-holder {
		position: sticky;
		z-index: 100;
		bottom: 0;
		width: 100%;
		display: flex;
		flex-direction: row-reverse;
		flex-wrap: nowrap;
		justify-content: flex-start;
		align-items: center;
		align-content: flex-start;
	}
	/* .post_btn {
		text-decoration: none;
		width: 135px;
		background: #2cb3f0;
		border-radius: 15px;
		margin: auto;
		padding: 5px;
		color: white;
		text-align: center;
		font-size: 23px;
		box-shadow: 0 10px 25px -5px rgba(44, 179, 240, 0.6);
		cursor: pointer;
	} */

	.link-style {
		display: inline-block;
		padding: 10px 20px;
		margin-right: 20px;
		border-radius: 4px;
		color: white;
		background-color: #43464b;
		font-weight: bold;
		text-decoration: none;
		float: right;
	}

	.link-style:hover {
		background-color: #aa336a;
		color: white;
	}
</style>
<center>
<form
	action="{{ path('app_blogs_index') }}"
	method="GET"
	class="d-flex justify-content-between col-4"
>
	<div class="input-group ">
		{# <label  for="criteria">Search by:</label> #}
    <select id="criteria" name="criteria" class="form-select ">
      <option disabled selected>Criteria</option>
      <option value="Title" {% if app.request.query.get('criteria') == 'Title' %}selected{% endif %}>Title</option>
      <option value="Category" {% if app.request.query.get('criteria') == 'Category' %}selected{% endif %}>Category</option>
      <option value="Tag" {% if app.request.query.get('criteria') == 'Tag' %}selected{% endif %}>Tag</option>
    </select>
		<input
			type="text"
			id="search-term"
			name="searchTerm"
			class="form-control"
			value="{{ searchTerm }}"
			placeholder="Search..."
		/>
	</div>
	<a href="{{ path('app_blogs_index') }}" class="btn"
	><i class="fa-solid fa-arrows-rotate" style="color: #8bacd9"></i
		></a>
	<button
	type="button"
	class="btn btn-outline-light dropdown-toggle ms-auto p-2"
	data-bs-toggle="dropdown"
	aria-expanded="false"
>
	Sort
</button>
<ul class="dropdown-menu">
	<li><a class="dropdown-item" href="#"></a></li>
	<li class="d-flex">
		<a
			class="dropdown-item align-self-center"
			href="{{ path('app_blogs_index_rating_desc') }}"
			><i class="fa-solid fa-sort-down"></i> By Rating
		</a>
	</li>
	<li class="d-flex">
		<a
			class="dropdown-item align-self-center"
			href="{{ path('app_blogs_index_rating_asc') }}"
			><i class="fa-solid fa-sort-up"></i> By Rating
		</a>
	</li>
	<li><hr class="dropdown-divider" /></li>
	<li class="d-flex">
		<a
			class="dropdown-item align-self-center"
			href="{{ path('app_blogs_index_title_desc') }}"
			><i class="fa-solid fa-sort-down"></i> By Title
		</a>
	</li>
	<li class="d-flex">
		<a
			class="dropdown-item align-self-center"
			href="{{ path('app_blogs_index_title_asc') }}"
			><i class="fa-solid fa-sort-up"></i> By Title
		</a>
	</li>
	<li><hr class="dropdown-divider" /></li>
	<li class="d-flex">
		<a
			class="dropdown-item align-self-center"
			href="{{ path('app_blogs_index_Views_desc') }}"
			>Most Read
		</a>
	</li>
	<li class="d-flex">
		<a
			class="dropdown-item align-self-center"
			href="{{ path('app_blogs_index_Views_asc') }}"
			>Least Read</a
		>
	</li>
</ul>
</form></center>

<section class="articles">
	{% for blog in blogs %}
	{{ base.card(blog, getBlogsMedia(blog.getBlogsId())) }}
	{% else %}
	<center>
	<h2>no records found</h2></center>
	{% endfor %}
</section>
<div class="d-flex justify-content-center">
	{{ knp_pagination_render(blogs) }}
</div>
<div class="btn-holder">
	{# <a href="{{ path('app_blogs_new') }}" class="post_btn">Create new</a> #}
	<a href="{{ path('app_blogs_new') }}" class="link-style"
		><svg
			xmlns="http://www.w3.org/2000/svg"
			width="16"
			height="16"
			fill="currentColor"
			class="bi bi-plus-lg"
			viewBox="0 0 16 16"
		>
			<path
				fill-rule="evenodd"
				d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"
			/>
		</svg>
		Post A New Blog</a
	>
</div>
<script
	src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
	integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
	crossorigin="anonymous"
></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.3/umd/popper.min.js"></script>
