{% extends 'base.html.twig' %}

{% block subject %}
	New Review Added!
{% endblock %}

{% block body %}
	<table style="max-width: 600px; margin: 0 auto; font-family: Poppins, sans-serif; font-size: 16px; line-height: 1.5;">
		<tr>
			<td style="border-radius: 10px; padding: 20px; background-color: #AA336A; color: #FFFFFF; text-align: center;">
				<h1 style="margin: 0;">{{ productreview.readyProductId.productId.name }}<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-all" viewBox="0 0 16 16">
  <path d="M8.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L2.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093L8.95 4.992a.252.252 0 0 1 .02-.022zm-.92 5.14.92.92a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 1 0-1.091-1.028L9.477 9.417l-.485-.486-.943 1.179z"/>
</svg></h1>
			</td>
		</tr>
		<tr>
			<td style="padding: 20px;">
				<p style="margin-bottom: 20px; color: black;">Dear
					{{ username }},</p>
				<p style="margin-bottom: 20px; color: black;">{{ productreview.userId }}
					has added a new review on your product !</p>
				<div style="border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); padding: 20px; display: inline-block; width: 100%; background-color: #232931;">
					<h2 style="margin-top: 0; margin-bottom: 10px; font-size: 24px; color: white;">{{ productreview.title }}</h2>
					<p style="color: white;">
						<strong>Posted by:</strong>
						{{ productreview.userId }} <strong>on</strong> {{ productreview.date }}</p>
					<p style="color: white;"><strong>{{ productreview.text }}</strong></p>
                    <br>
					<p style="color: white;">
						<strong>Rating:
						{{ productreview.rating }}
						<strong> / 10</strong>
					</p>
				</td>
			</td>
		</tr>
		<p style="color: black;">Congratulations ! Your products are getting more reviews !</p>
	</table>
{% endblock %}
