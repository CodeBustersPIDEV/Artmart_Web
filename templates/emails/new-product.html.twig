{% extends 'base.html.twig' %}

{% block subject %}
	New Product Added!
{% endblock %}

{% block body %}
	<table style="max-width: 600px; margin: 0 auto; font-family: Poppins, sans-serif; font-size: 16px; line-height: 1.5;">
		<tr>
			<td style="border-radius: 10px; padding: 20px; background-color: #AA336A; color: #FFFFFF; text-align: center;">
				<h1 style="margin: 0;">New Product Added <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-all" viewBox="0 0 16 16">
  <path d="M8.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L2.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093L8.95 4.992a.252.252 0 0 1 .02-.022zm-.92 5.14.92.92a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 1 0-1.091-1.028L9.477 9.417l-.485-.486-.943 1.179z"/>
</svg></h1>
			</td>
		</tr>
		<tr>
			<td style="padding: 20px;">
				<p style="margin-bottom: 20px; color: black;">Dear
					{{ username }},</p>
				<p style="margin-bottom: 20px; color: black;">{{ readyproduct.userId }}
					has added a new product to our website for you !</p>
				<div style="border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); padding: 20px; display: inline-block; width: 100%; background-color: #232931;">
					<div style="margin-bottom: 10px;">
						<span style="background-color: #0D6E72; color: #FFFFFF; padding: 5px 10px; border-radius: 5px; font-size: 12px;">{{ readyproduct.productId.category }}</span>
					</div>
					<h2 style="margin-top: 0; margin-bottom: 10px; font-size: 24px; color: white;">{{ readyproduct.productId.name }}</h2>
					<p style="color: white;">
						<strong>Made by:</strong>
						{{ readyproduct.userId }}</p>
					<p style="color: white;">
						<strong>Weight:</strong>
						{{ readyproduct.productId.weight }}
						Kg</p>
					<p style="color: white;">
						<strong>Material:</strong>
						{{ readyproduct.productId.material }}</p>
					<p style="color: white;">
						<strong>Dimensions:</strong>
						{{ readyproduct.productId.dimensions }}</p>
					<p style="color: white;"><strong>Description:</strong>{{ readyproduct.productId.description }}</p>
                    <br>
					<p style="color: white;">
						<strong>Price:
						{{ readyproduct.price }}
						<strong>TND</strong>
					</p>
				</td>
			</td>
		</tr>
		<p style="color: black;">Thank you for trusting us.</p>
	</table>
{% endblock %}
