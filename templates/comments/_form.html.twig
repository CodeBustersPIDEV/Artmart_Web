<style>
	.comment-form {
		width: 500px;
		margin: 0 auto;
	}

	.form-group {
		margin-bottom: 20px;
	}

	label {
		display: block;
		margin-bottom: 5px;
		font-weight: bold;
	}

	.form-control {
		width: 100%;
		padding: 10px;
		font-size: 16px;
		border: 1px solid #ccc;
		border-radius: 4px;
	}

	.star-rating {
		display: inline-block;
		font-size: 30px;
	}

	.star-rating .star {
		display: inline-block;
		margin-right: 5px;
		color: #ccc;
		cursor: pointer;
	}

	.star-rating[data-rating="1"] .star:nth-child(-n + 1),
	.star-rating[data-rating="2"] .star:nth-child(-n + 2),
	.star-rating[data-rating="3"] .star:nth-child(-n + 3),
	.star-rating[data-rating="4"] .star:nth-child(-n + 4),
	.star-rating[data-rating="5"] .star:nth-child(-n + 5) {
		color: gold;
	}

	.rating-field {
		display: none;
	}
	label {
		color: whitesmoke;
	}
	.inpt {
		background: transparent;
		color: whitesmoke;
	}
	.inpt:focus {
		background: transparent;
		color: whitesmoke;
	}
</style>

{{ form_start(form, { attr: { class: "comment-form" } }) }}
<div class="row">
	<div class="col-md-6">
		<div class="form-group">
			{{ form_label(form.content, "Comment") }}
			{{
				form_widget(form.content, {
					attr: { class: "form-control inpt", placeholder: "Comment" }
				})
			}}
		</div>
	</div>
	<div class="col-md-4">
		<div class="form-group">
			{{ form_label(form.rating, "Rating") }}
			{{
				form_widget(form.rating, {
					attr: { class: "form-control inpt", placeholder: "Rating" }
				})
			}}
		</div>
	</div>
</div>

