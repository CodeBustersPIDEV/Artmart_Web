<style>
	.comment-form {
		width: 500px;
		margin: 0 auto;
	}

	.form-group {
		margin-bottom: 20px;
	}

	label {
		display: block;
		margin-bottom: 5px;
		font-weight: bold;
	}
	label {
		color: whitesmoke;
	}
	.inpt {
		background: transparent;
		color: whitesmoke;
	}
	.inpt:focus {
		background: transparent;
		color: whitesmoke;
	}
	.ratingInput {
		border: none !important;
		color: gold;
		font-size: x-large;
	}

	.ratingInput:focus {
		border: none !important;
		color: gold;
		font-size: x-large;
	}
</style>
<link
	rel="stylesheet"
	href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
/>

{{ form_start(form, { attr: { class: "comment-form" } }) }}
<div class="row">
	<div class="col-md-6">
		<div class="form-group">
			{{ form_label(form.content, "Comment") }}
			{{
				form_widget(form.content, {
					attr: { class: "form-control inpt", placeholder: "Comment" }
				})
			}}
		</div>
	</div>
	<div class="col-md-4">
		<div class="form-group">
			{{ form_label(form.rating, "Rating") }}
			{{
				form_widget(form.rating, {
					attr: { class: "form-control inpt ratingInput" }
				})
			}}
		</div>
	</div>
</div>

{{ form_widget(form._token) }}
<button type="submit" class="btn btn-outline-light" id="submitBtn">
	{{ button_label|default('submit') }}</button
>{{ form_end(form) }}
