{% extends 'base.html.twig' %} 
{% import "base.html.twig" as base %}
{% block title %}Event{% endblock %}
{% block body %}
{{ base.NavBar() }}

    <h1>{{ event.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Location</th>
                <td>{{ event.location }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ event.type }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Entryfee</th>
                <td>{{ event.entryfee }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ event.capacity }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{{ event.startdate ? event.startdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ event.enddate ? event.enddate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
              <td><img src="{{ asset('imagescustom/' ~ event.image) }}"></td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ event.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_event_index') }}">back to list</a>

    <a href="{{ path('app_event_edit', {'eventid': event.eventid}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
<style>
    img {
    max-width: 200px;
    max-height: 200px;
}</style>
{% endblock %}
