{% extends 'base.html.twig' %} 
{% import "base.html.twig" as base %}
{% block title %}Event List{% endblock %}

{% block body %}
{{ base.NavBar() }}

<h1>Event List</h1>

<div class="row">
  {% for event in events %}
  <div class="col-md-4" style="margin-top:20px">
    <div class="card">
      <img class="card-img-top" src="{{ event.image }}" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">{{ event.name }}</h5>
        <p class="card-text">{{ event.description }}</p>
        <a href="{{ path('app_event_show', {'eventid': event.eventid}) }}" class="btn btn-primary">Show</a>
        <a href="{{ path('app_event_edit', {'eventid': event.eventid}) }}" class="btn btn-secondary">Edit</a>
      </div>
    </div>
  </div>
  {% else %}
  <p>No records found</p>
  {% endfor %}
</div>
<br>
    <div class="text-center">
        <a href="{{ path('app_event_new') }}" class="btn btn-primary">Create a  new event</a>
    </div>
{% endblock %}
