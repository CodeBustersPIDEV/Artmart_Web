{% extends 'baseE.html.twig' %}
{% block content %}


{% block body %}
	{% include('event/admin/eventBar.html.twig') %}

    <h1 style="margin:20px; color: deeppink;"><u>{{ event.name }}</u></h1>
    <br>

    <table>
        <tbody>
            <tr>
                <th>Artist</th>
                <td>{{ event.user.name }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ event.location }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ event.type }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Entryfee</th>
                <td>{{ event.entryfee }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ event.capacity }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{{ event.startdate ? event.startdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ event.enddate ? event.enddate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

            <tr>
                <th>Status</th>
                <td>{{ event.status }}</td>
            </tr>

            <tr>
                <th><i class="fa fa-file-image-o category-icon" aria-hidden="true"></i> Image:</th>
                <td><img src="{{ asset('imagescustom/' ~ event.image) }}" alt="Ev Image" onclick="showImage(this)"></td>
            </tr>
        <tr>
            <td colspan="2">
                <a href="{{ path('app_event_index_admin') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <div style="float: right;">
                    <a href="{{ path('app_event_edit_admin', {'eventid': event.eventid}) }}" class="btn btn-outline-success" style="margin-right : 10px;">Edit</a>
                    <a href="{{ path('app_event_delete_admin', {'eventid': event.eventid}) }}" class="btn btn-outline-danger" style="margin-right : 10px;">Delete</a>
                </div>
            </td>
        </tr>
            <script>
                function showImage(img) {
                    img.classList.toggle("enlarge");
                }
            </script>

            <style>
                .enlarge {
                    max-width: 100%;
                    max-height: 100%;
                    position: fixed;
                    top: 0;
                    left: 0;
                    right: 0;
                    bottom: 0;
                    margin: auto;
                    z-index: 9999;
                    cursor: zoom-out;
                }
            </style>
        </tbody>

    </table>
    <br>
    {% endblock %}

    {% block stylesheets %}
        <style>
            table {
            border-collapse: collapse;
            width: 70%;
            font-family: 'Open Sans', sans-serif;
            background-color: #fff;
            border: 1px solid #ddd;
            margin: 0 auto; /* Add this line */
            }


            th, td {
                text-align: left;
                padding: 12px 8px;
                border-bottom: 1px solid #ddd;
            }

            th {
                background-color: #f5f5f5;
                font-size: 16px;
            }
            td {
            background-color: #fff;
            padding-left: 20px;
            }

            tr:hover {
                background-color: #f5f5f5;
            }

            img {
                max-width: 200px;
                max-height: 200px;
            }

            .button-group {
                margin-top: 16px;
            }

            .button-group a {
                margin-right: 8px;
                color: #fff;
                background-color: #4CAF50;
                padding: 8px;
                border-radius: 4px;
                text-decoration: none;
            }

            .button-group a:hover {
                background-color: #3e8e41;
            }

            .delete-form {
                display: inline-block;
                margin-left: 8px;
            }

            .category-icon {
                font-size: 20px;
                margin-right: 5px;
            }
        </style>

    {% endblock %}

{% endblock %}