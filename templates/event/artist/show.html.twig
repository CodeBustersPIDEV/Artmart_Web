{% extends 'baseF.html.twig' %}
{% block content %}


    {% block body %}
        {% include('event/artist/eventBar.html.twig') %}

        <h1 style="margin:20px; color: deeppink;"><u>{{ event.name }}</u></h1>
        <br>

        <table>
            <tbody>
                <tr>
                    <th>Location</th>
                    <td>{{ event.location }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ event.type }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ event.description }}</td>
                </tr>
                <tr>
                    <th>Entryfee</th>
                    <td>{{ event.entryfee }}</td>
                </tr>
                <tr>
                    <th>Capacity</th>
                    <td>{{ event.capacity }}</td>
                </tr>
                <tr>
                    <th>Startdate</th>
                    <td>{{ event.startdate ? event.startdate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Enddate</th>
                    <td>{{ event.enddate ? event.enddate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>

                <tr>
                    <th>Status</th>
                    <td>{{ event.status }}</td>
                </tr>

                <tr>
                    <th><i class="fa fa-file-image-o category-icon" aria-hidden="true"></i> Image:</th>
                    <td><img src="{{ asset(event.image) }}" alt="Ev Image" onclick="showImage(this)"></td>
                </tr>

            </tbody>

        </table>
        <div style="display: flex; flex-direction: column; align-items: center; margin-top: 20px;">
            <iframe style="border:0; width: 70%; height: 350px; display: block; margin: 0 auto;" class="img-fluid" src="https://maps.google.com/maps?q=+{{event.location}}+&hl=fr&z=14&amp;output=embed" frameborder="0" allowfullscreen></iframe>
            <div class="map-wrapper-300 mb-3"></div>
        </div>

        <div style="float: left; margin-top: 20px; margin-left: 220px;">
            <a href="{{ path('app_event_index_admin') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <div style="display: inline-block;">
                {% if isOwner %}
                    <a href="{{ path('app_event_edit_admin', {'eventid': event.eventid}) }}" class="btn btn-outline-success" style="margin-right : 10px; margin-left : 10px">Edit</a>
                    <a href="{{ path('app_event_delete_admin', {'eventid': event.eventid}) }}" class="btn btn-outline-danger" style="margin-right : 10px;">Delete</a>
                {% endif %}
            </div>
        </div>

        <script>
            function showImage(img) {
                img.classList.toggle("enlarge");
            }
        </script>
    {% endblock %}

    {% block stylesheets %}
        <style>
            .enlarge {
                max-width: 100%;
                max-height: 100%;
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                margin: auto;
                z-index: 9999;
                cursor: zoom-out;
            }
            table {
                border-collapse: collapse;
                width: 70%;
                font-family: 'Open Sans', sans-serif;
                background-color: #fff;
                border: 1px solid #ddd;
                margin: 0 auto; /* Add this line */
            }


            th, td {
                text-align: left;
                padding: 12px 8px;
                border-bottom: 1px solid #ddd;
            }

            th {
                background-color: #f5f5f5;
                font-size: 16px;
            }
            td {
            background-color: #fff;
            padding-left: 20px;
            }

            tr:hover {
                background-color: #f5f5f5;
            }

            img {
                max-width: 200px;
                max-height: 200px;
            }

            .button-group {
                margin-top: 16px;
            }

            .button-group a {
                margin-right: 8px;
                color: #fff;
                background-color: #4CAF50;
                padding: 8px;
                border-radius: 4px;
                text-decoration: none;
            }

            .button-group a:hover {
                background-color: #3e8e41;
            }

            .delete-form {
                display: inline-block;
                margin-left: 8px;
            }

            .category-icon {
                font-size: 20px;
                margin-right: 5px;
            }
        </style>

    {% endblock %}

{% endblock %}