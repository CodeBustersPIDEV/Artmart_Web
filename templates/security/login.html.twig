{% extends 'baseF.html.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
<br><br><br>
<section class="containers my-3">
 <div class="login-card">
  <h1>Login</h1>
  <div class="col-sm-12">
    <!-- Start the form and add a class attribute to it -->
    {{ form_start(loginForm, {'attr': {'novalidate': 'novalidate', 'class': 'form'}}) }}
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <div class="form-group">
      {{ form_label(loginForm.username) }}
      {{ form_widget(loginForm.username, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group password-input-container">
      {{ form_label(loginForm.password) }}
      {{ form_widget(loginForm.password, {'attr': {'class': 'form-control'}}) }}
      <img src="/y.PNG" alt="password not entered" class="password-gif">

    </div>
    <div class="button">
      <button type="submit" id="submitBtn">{{ button_label|default('Sign in') }}</button>
      <center><a href="{{ path('app_user_EmailVerif') }}">Forget Password</a></center> 
    </div>
    {{ form_end(loginForm) }}
  </div>
</section>
</div>

<style>
.containers {
  width: 400px;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  padding: 20px;
}

h1 {
  font-size: 36px;
  font-weight: bold;
  margin-bottom: 20px;
  text-align: center;
  color: #333;
}

.form-group {
  margin-bottom: 20px;
}

label {
  display: block;
  font-size: 18px;
  margin-bottom: 5px;
  color: #666;
}

input[type="text"],
input[type="password"] {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 16px;
}

button[type="submit"] {
    margin: 0 auto;
  display: block;
  width: 28%;
  padding: 10px;
  border: none;
  border-radius: 5px;
  font-size: 18px;
  background-color: #0D6E72;
  color: #fff;
  transition: background-color 0.2s ease;
}

button[type="submit"]:hover {
  background-color: #0062cc;
}

a {   
  color: #0D6E72;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

.password-input-container {
  position: relative;
}

.password-gif {

  top: 100%;
  right: 10px;

}
</style>

<script>
  var passwordInput = document.getElementById('{{ loginForm.password.vars.id }}');
  var passwordGif = document.querySelector('.password-gif');

  passwordInput.addEventListener('input', function() {
    if (passwordInput.value === '') {
      passwordGif.src = '/y.PNG';
    } else {
      passwordGif.src = '/x.PNG';
    }
  });

  passwordInput.addEventListener('focus', function() {
    passwordGif.style.display = 'block';
  });

  passwordInput.addEventListener('blur', function() {
    passwordGif.style.display = 'none';
  });
</script>


{% endblock %}
