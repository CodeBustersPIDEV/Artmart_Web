{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>OrderId</th>
                <td>{{ order.orderId }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ order.quantity }}</td>
            </tr>
            <tr>
                <th>Shippingaddress</th>
                <td>{{ order.shippingaddress }}</td>
            </tr>
            <tr>
                <th>Orderdate</th>
                <td>{{ order.orderdate ? order.orderdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Totalcost</th>
                <td>{{ order.totalcost }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_order_index') }}">back to list</a>

    <a href="{{ path('app_order_edit', {'orderId': order.orderId}) }}">edit</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
