{% extends 'base.html.twig' %}

{% block title %}Wishlist{% endblock %}

{% block body %}
    <h1>Wishlist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>WishlistId</th>
                <td>{{ wishlist.wishlistId }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ wishlist.userid }}</td>
            </tr>
            <tr>
                <th>Productid</th>
                <td>{{ wishlist.productid }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ wishlist.date ? wishlist.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ wishlist.quantity }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ wishlist.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_wishlist_index') }}">back to list</a>

    <a href="{{ path('app_wishlist_edit', {'wishlistId': wishlist.wishlistId}) }}">edit</a>

    {{ include('wishlist/_delete_form.html.twig') }}
{% endblock %}
