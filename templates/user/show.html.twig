{% extends 'baseU.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
.about-avatar{
    display: block;
  margin: auto;
  border-radius: 50%;
  width: 150px;
  height: 250px;
}
   

</style>
 {% if user != null %}
 <img
          class="about-avatar"
             src="{{user.getPicture()}}"
 />
 {% else %}
 <img
          class="about-avatar"
               src="{{ asset('assets/User/user.png') }}"
 />
 {% endif %}
 <br><br>
    <table class="table">
        <tbody>

            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Phonenumber</th>
                <td>{{ user.phonenumber }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>

           <div <div class="align-items-center text-center">
           {% if clientAttributes is defined %}
    <p><strong>Number of Orders:</strong> {{ clientAttributes.nbrOrders }}</p>
    <p><strong>Number of Demands:</strong> {{ clientAttributes.nbrDemands }}</p>
{% endif %}
            
{% if artistAttributes is defined %}
<p><strong>Bio:</strong> {{ artistAttributes.bio }}</p>
<p><strong>Number of Artwork:</strong> {{ artistAttributes.nbrArtwork }}</p>
{% endif %}
{% if adminAttributes is defined %}
<p><strong>Department:</strong> {{ adminAttributes.department }}</p>
{% endif %}
</div>
        </tbody>
    </table>
   
    <div class="btn d-flex align-items-center justify-content-center">
<a href="{{ path('app_user_index') }}"class="btn btn-outline-primary mr-2">Back to list</a>
    <a href="{{ path('app_user_edit', {'userId': user.userId}) }}"class="btn btn-outline-primary mr-2">edit</a>
    {{ include('user/_delete_form.html.twig') }}
</div>
</div>
</div>


{% endblock %}
