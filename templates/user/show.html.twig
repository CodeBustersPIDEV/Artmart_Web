{% extends 'baseU.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
    <h1>User</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Phonenumber</th>
                <td>{{ user.phonenumber }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
           {% if clientAttributes is defined %}
    <p><strong>Number of Orders:</strong> {{ clientAttributes.nbrOrders }}</p>
    <p><strong>Number of Demands:</strong> {{ clientAttributes.nbrDemands }}</p>
{% endif %}
            
{% if artistAttributes is defined %}
<p><strong>Bio:</strong> {{ artistAttributes.bio }}</p>
<p><strong>Number of Artwork:</strong> {{ artistAttributes.nbrArtwork }}</p>
{% endif %}
{% if adminAttributes is defined %}
<p><strong>Department:</strong> {{ adminAttributes.department }}</p>
{% endif %}

        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'userId': user.userId}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}

</div>
</div>


{% endblock %}
