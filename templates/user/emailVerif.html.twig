{% extends 'baseF.html.twig' %}

{% block title %}Token Verification{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    .section {
      padding: 80px 0;
    }

    h1 {
      margin-bottom: 40px;
      font-size: 36px;
      font-weight: 600;
      text-align: center;
    }

    .form-control {
      border-radius: 0;
      padding: 12px 20px;
      font-size: 16px;
      border: none;
      border-bottom: 2px solid #e1e1e1;
    }

    .form-control:focus {
      border-color: #007bff;
      box-shadow: none;
    }

    .button {
      margin-top: 30px;
      text-align: center;
    }

    .btn {
      border-radius: 0;
      font-size: 16px;
      padding: 12px 30px;
      letter-spacing: 1px;
      font-weight: 600;
    }

    .btn-outline-primary {
      color: #007bff;
      border-color: #007bff;
    }

    .btn-outline-primary:hover {
      color: #fff;
      background-color: #007bff;
      border-color: #007bff;
    }
  </style>
{% endblock %}

{% block content %}
  <section class="section">
    <div class="container">
      <div class="row">
        <div class="col"></div>
        <div class="col-sm-12">
          <h1>Email </h1>

          {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group">
              {{ form_row(form.email, {'attr': {'class': 'form-control', 'id': 'email', 'placeholder': 'Enter your email'}}) }}
            </div>
<br>
<div class="button" style="text-align: center">
              <button type="submit" class="btn btn-outline-primary">{{ button_label|default('Verify') }}</button>
            </div>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </section>
  <br><br><br><br><br><br><br><br><br><br><br>
{% endblock %}
