{% extends 'baseU.html.twig' %} 
{% block title %}User index{% endblock %} 
{% block content %}
  <style>
        .cute {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 3em;
            color: #20247b;
            text-shadow: 2px 2px #ccc;
            text-align: center;
            margin: 0 auto;
            padding: 10px;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 0 10px #ccc;
        }
    </style>
<form action="{{ path('app_user_index') }}" method="GET">
    <div class="form-group">
        <label for="search-term">Search for users:</label>
        <input type="text" id="search-term" name="search" class="form-control" value="{{ searchTerm }}">
	<button type="submit" class="btn btn-outline-primary mr-2">Search</button>

    </div>
</form>
<div class="button" style="text-align: center">

<a class="btn btn-outline-primary mr-2" href="{{ path('app_user_index', {'userse': 'username'}) }}">User by name</a>
<a class="btn btn-outline-primary mr-2" href="{{ path('app_user_index', {'userse': 'name'}) }}">User by username</a>
</div>
<br>
<h1 class="cute">Users List</h1>
<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Role</th>
			<th>Username</th>
			<th>actions</th>
		</tr>
	</thead>
	<tbody>
		{% for user in users %}
		<tr>
			<td>{{ user.name }}</td>
			<td>{{ user.email }}</td>
			<td>{{ user.role }}</td>
			<td>{{ user.username }}</td>

			<td>
					<a class="btn btn-outline-primary mr-2" href="{{ path('app_user_show', { userId: user.userId }) }}">Show</a>
					<a class="btn btn-outline-primary mr-2" href="{{ path('app_user_edit', { userId: user.userId }) }}">Edit</a>
				{% if user.blocked == 0 %}	
					<a class="btn btn-outline-primary mr-2" href="{{ path('app_user_block', { userId: user.userId }) }}">Block</a>
				{% else %}
					<a class="btn btn-outline-primary mr-2" href="{{ path('app_user_unblock', { userId: user.userId }) }}">Unblock</a>
				{% endif %}

			</td>
		</tr>
		{% else %}
		<tr>
			<td colspan="14">no records found</td>
		</tr>
		{% endfor %}
	</tbody>
</table>

{% endblock %}