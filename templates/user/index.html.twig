{% extends 'baseU.html.twig' %} 
{% block title %}User index{% endblock %} 
{% block content %}
  <style>
        .cute {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 3em;
            color: #20247b;
            text-shadow: 2px 2px #ccc;
            text-align: center;
            margin: 0 auto;
            padding: 10px;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 0 10px #ccc;
        }
        #searchInput {
  border: 2px solid #ccc;
  border-radius: 5px;
  font-size: 1.2em;
  padding: 5px 10px;
  width: 300px;
}
    </style>
    
<script>
$(document).ready(function() {
  $('th').click(function() {
    var table = $(this).parents('table').eq(0)
    var rows = table.find('tr:gt(0)').toArray().sort(comparer($(this).index()))
    this.asc = !this.asc
    if (!this.asc) { rows = rows.reverse() }
    for (var i = 0; i < rows.length; i++) { table.append(rows[i]) }
  })
})

function comparer(index) {
  return function(a, b) {
    var valA = getCellValue(a, index), valB = getCellValue(b, index)
    return $.isNumeric(valA) && $.isNumeric(valB) ? valA - valB : valA.toString().localeCompare(valB)
  }
}

function getCellValue(row, index){ return $(row).children('td').eq(index).text() }

$(document).ready(function() {
  $('#searchInput').keyup(function() {
    var value = $(this).val().toLowerCase()
    $('table tbody tr').filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    })
  })
})
</script>
<center>
<input type="text" id="searchInput"  placeholder="Search...">
</center>

<br>
<h1 class="cute">Users List</h1>
<div class="table-container">
<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Role</th>
			<th>Username</th>
			<th>actions</th>
		</tr>
	</thead>
	<tbody>
		{% for user in users %}
		<tr>
			<td>{{ user.name }}</td>
			<td>{{ user.email }}</td>
			<td>{{ user.role }}</td>
			<td>{{ user.username }}</td>
        <div class="d-inline">
			<td>
        {% if user.blocked == 0 %}	
        <form action="{{ path('app_user_block', { userId: user.userId }) }}" method="POST">
            <button type="submit" class="btn btn-outline-primary mr-2">Block</button>
        </form>
                {% else %}
        <form action="{{ path('app_user_unblock', { userId: user.userId }) }}" method="POST">
        <button type="submit" class="btn btn-outline-primary mr-2">Unblock</button>
        </form>
                {% endif %}
					<a class="btn btn-outline-primary mr-2" href="{{ path('app_user_show', { userId: user.userId }) }}">Show</a>
					<a class="btn btn-outline-primary mr-2" href="{{ path('app_user_edit', { userId: user.userId }) }}">Edit</a>
		
			</td>
    </div>
		</tr>

		{% else %}
		<tr>
			<td colspan="14">no records found</td>
    </tr>
		{% endfor %}

	</tbody>
</table>
{{ knp_pagination_render(users) }}

</div>
<br>
