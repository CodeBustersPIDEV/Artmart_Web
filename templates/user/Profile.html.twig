{% extends 'baseF.html.twig' %}

{% block title %}Profile{% endblock %}

{% block content %}
  <style>
    main {
      color: #6F8BA4;
      margin-top: 20px;
    }
.button{
    align: center;
  }
  h1{

  font-size: 4rem; /* set the font size to 4rem */
        color: #AA336A; /* set the font color */
        text-shadow: 2px 2px 4px #000000; /* add a text shadow */  }
  .section {
  padding: 100px 0;
  position: relative;
  width: 800px;
  height:720px;
  margin: 50px auto 0;
  background-color: #fff;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  padding: 20px;
}



    .gray-bg {
      background-color: white;
    }

    img {
      max-width: 100%;
    }

    img {
      vertical-align: middle;
      border-style: none;
    }


    .about-text h3 {
   
        font-size: 2rem; /* set the font size to 4rem */
        color: #AA336A; /* set the font color */
        text-shadow: 2px 2px 4px #000000; /* add a text shadow */
        border-bottom: 4px solid #AA336A; /* add a border bottom */
        padding-bottom: 10px; /* add some padding */
        text-align: center; /* center the text */
    
    }

    @media (max-width: 767px) {
      .about-text h3 {
        font-size: 35px;
      }
    }

    .about-text h6 {
      font-weight: 600;
      margin-bottom: 15px;
    }

    @media (max-width: 767px) {
      .about-text h6 {
        font-size: 18px;
      }
    }

    .about-text p {
      font-size: 18px;
      max-width: 450px;
    }

    .about-text p mark {
      font-weight: 600;
      color: #AA336A;
    }
/* Adjust padding for better spacing */
.about-list {
  
  margin-top: 50px;
}

.about-list__label {
  color: #AA336A;
  font-weight: 600;
  width: 88px;

}

.about-list__value {
  font-size: 15px;
  
}


/* Adjust font size and line height for better readability */
.about-list p {
  margin: 0;
  font-size: 18px;
  line-height: 1.5;
} 

/* Add some hover effects for better interactivity */
.about-list .media:hover {
  background-color: #f5f5f5;
}

    .about-avatar {
 width: 300px;
    height: 300px;
    border-radius: 50%;
    object-fit: cover;
    margin-left: auto;
    margin-right: auto;
    transition: transform 0.3s ease-in-out;
    }

    .about-avatar:hover {
    transform: scale(1.1);
    }

    @media (max-width: 991px) {
      .about-avatar {
        margin-top: 30px;

      }
    }

    .about-section .counter {
      padding: 22px 20px;
      background: #ffffff;
      border-radius: 10px;
      box-shadow: 0 0 30px rgba(31, 45, 61, 0.125);
    }

    .about-section .counter .count-data {
      margin-top: 10px;
      margin-bottom: 10px;
    }

    .about-section .counter .count {
      font-weight: 700;
      color: #20247b;
      margin: 0 0 5px;
    }

    .about-section .counter p {
      font-weight: 600;
      margin: 0;
    }

    mark {
      background-image: linear-gradient(rgba(252, 83, 86, 0.6), rgba(252, 83, 86, 0.6));
      background-size: 100% 3px;
      background-repeat: no-repeat;
      background-position: 0 bottom;
      background-color: transparent;
      padding: 0;
      color: currentColor;
    }

    .theme-color {
      color: #fc5356;
    }

    .dark-color {
      color: #20247b;
    }


    .accImg {
      width: 40px;
      border-radius: 50px;
    }

    .profile_icon {
      background-color: Transparent;
      background-repeat: no-repeat;
      border: none;
      cursor: pointer;
      overflow: hidden;
    }

    .navv {
      background: #42a5f5 !important;
      position: sticky !important;
      z-index: 10;
    }

    .social_media_cont {
      margin-left: 10px;
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      gap: 10px;
    }
  
.attributes{
    text-align: center;
  color: white;
  font-size: 3em; /* or any font size that you want */
  margin-top: 50px; /* add some margin to the top */
  text-align: center;
  }
  /* Style for the button container */
.button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

/* Style for the Edit Profile button */
.btn-outline-primary {
  background-color: #fff;
  color: #AA336A;
  border-color: #AA336A;
  font-weight: bold;
  padding: 0.5rem 1.5rem;
  border-radius: 0.5rem;
  transition: all 0.3s ease-in-out;
  text-transform: uppercase;
}

.btn-outline-primary:hover {
  background-color: #AA336A;
  color: #fff;
  border-color: #AA336A;
}

/* Style for the Delete Account button */
.btn-danger {
  background-color: #AA336A;
  color: #fff;
  border-color: #AA336A;
  font-weight: bold;
  padding: 0.5rem 1.5rem;
  border-radius: 0.5rem;
  transition: all 0.3s ease-in-out;
  text-transform: uppercase;
}

.btn-danger:hover {
  background-color: #fff;
  color: #AA336A;
  border-color: #AA336A;
}

/* Style for the icon */
.icon {
  display: inline-block;
  width: 1.5rem;
  height: 1.5rem;
  margin-right: 0.5rem;
  fill: currentColor;
}

/* Style for the Edit Profile icon */
.edit-icon {
  background-image: url('edit-icon.svg');
}

/* Style for the Delete Account icon */
.delete-icon {
  background-image: url('delete-icon.svg');
}

  </style>

<section class="section about-section gray-bg" id="about">

<div class="container">
<center>

<h1>Welcome  {{ user.username }} </h1></center>
<br><br>

  <div class="row align-items-center flex-row-reverse">
    <div class="col-lg-6">
      <div class="about-text go-to">
    
        <h3 class="dark-color">About  </h3>

    <div class="row about-list">
  <div class="col-md-6">
  <div class="media">

      <label class="about-list__label">Name:</label>
      <p class="about-list__value">{{ user.name }}</p>
    </div>  </center>
    <div class="media">
      <label class="about-list__label">Birthday:</label>
      <p class="about-list__value">{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</p>
    </div>
    <div class="media">
      <label class="about-list__label">Email:</label>
      <p class="about-list__value">{{ user.email }}</p>
    </div>
 

    <div class="media">
      <label class="about-list__label">Role:</label>
      <p class="about-list__value">{{ user.role }}</p>
    </div>
    <div class="media">
      <label class="about-list__label">Phone:</label>
      <p class="about-list__value">{{ user.phonenumber }}</p>
    </div>
    
  </div>

 </div>
    
      </div>
    </div>
    <div class="col-lg-6">
            <div class="about-avatar">
              
              {% if user != null %}
		<img
                 class="about-avatar"
        			src="{{user.getPicture()}}"
		/>
		{% else %}
		<img
                 class="about-avatar"
        	  		src="{{ asset('assets/User/user.png') }}"
		/>
		{% endif %}
            </div>
          </div>
        </div>
       
            <div class="attributes">
           {% if clientAttributes is defined %}
    <p><strong>Number of Orders:</strong> {{ clientAttributes.nbrOrders }}</p>
    <p><strong>Number of Demands:</strong> {{ clientAttributes.nbrDemands }}</p>
{% endif %}
            
{% if artistAttributes is defined %}
<center>
<div class="col-md-6">
<img src="{{ qr_code_url(url) }}" style="width: 100px; height: 100px;"/>
</div>
</center>
<p><strong>Bio:</strong> {{ artistAttributes.bio }}</p>
<p><strong>Number of Artwork:</strong> {{ artistAttributes.nbrArtwork }}</p>
 
{% endif %}
{% if adminAttributes is defined %}
<p><strong>Department:</strong> {{ adminAttributes.department }}</p>
{% endif %}
</div>
        </tbody>
    </table>


<div class="button d-flex align-items-center">
  <a class="btn btn-outline-primary mr-2" href="{{ path('app_user_editProfile', {'userId': user.userId}) }}">
    <i class="fas fa-user-edit"></i> Edit Profile
  </a>

</div>

      <p><strong>Last Logged In:</strong> {{ lastloggedin}}</p>  

{% endblock %}
