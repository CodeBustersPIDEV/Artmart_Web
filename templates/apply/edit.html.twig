{% extends 'base.html.twig' %}
{% import "base.html.twig" as base %}
{% block title %}Edit Apply{% endblock %}

{% block body %}
{{ base.NavBar() }}
    <h1>Edit Apply</h1>

    {{ include('apply/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_apply_index') }}">back to list</a>

    {{ include('apply/_delete_form.html.twig') }}

<script>
// Add onclick event to all hyperlinks
var links = document.getElementsByTagName("a");
for (var i = 0; i < links.length; i++) {
  links[i].setAttribute("onclick", "playSound()");
}
var linkss = document.getElementsByTagName("button");
for (var i = 0; i < linkss.length; i++) {
  linkss[i].setAttribute("onclick", "playSound()");
}

// Play sound function
function playSound() {
  var audio = new Audio('{{ asset('js/ab.mp3') }}');
  audio.play();
}
</script>
{% endblock %}
