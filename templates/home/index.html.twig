{% extends 'front.html.twig' %}


{% block content %}


	{% block stylesheets %}

		<style>


			.custom-card {
				border-radius: 10px;
				box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
				margin: 10px;
				padding: 20px;
				display: inline-block;
				width: 100%;
				max-width: 300px;
				background-color: #232931;
				transition: box-shadow 0.2s ease-in-out;
			}

			.custom-card:hover {
				box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
				transform: translateY(-2px);
			}

			.custom-card h2 {
				margin-top: 0;
				margin-bottom: 10px;
				font-size: 24px;
				color: #FFFFFF;
			}

			.custom-card p {
				margin-top: 0;
				color: #FFFFFF;
			}

			.custom-card a {
				display: inline-block;
				margin-top: 10px;
				padding: 12px 20px;
				background-color: #AA336A;
				color: #FFFFFF;
				border-radius: 5px;
				text-decoration: none;
				transition: background-color 0.2s ease-in-out;
			}

			.custom-card a:hover {
				background-color: #0D6E72;
			}

			.custom-card img {
				width: 100%;
				height: 200px;
				object-fit: cover;
				border-radius: 5px;
				margin-bottom: 10px;
			}

			.custom-card:nth-child(5n + 1) {
				clear: left;
			}
			.orderby-link {
				display: inline-block;
				padding: 10px 20px;
				border: 1px solid #ddd;
				border-radius: 3px;
				background-color: #f2f2f2;
				color: #333;
				text-decoration: none;
				transition: background-color 0.3s ease;
			}

			.orderby-link:hover {
				background-color: #ddd;
			}
		</style>


	{% endblock %}

	{% block body %}

		<div class="row">
			{% for i in 0..2 %}
				<div class="col-md-4">
					{% if customproducts|length > i %}
						{% set customproduct = customproducts[i] %}
						<div class="custom-card">
						<img src="{{ customproduct.productId.image }}" alt="{{ customproduct.productId.name }} image"/>
							<h2>{{ customproduct.productId.name }}</h2>
							<p>{{ customproduct.productId.description }}</p>
						</div>
					{% endif %}
				</div>
			{% endfor %}
		</div>

	{% endblock %}


{% endblock %}

{% block content2 %}


	


		<div class="row">
			{% set top3blogs = getTop3Rated() %}
			{% for blog in top3blogs %}
			{% set blog_media =getBlogsMedia(blog.getBlogsId()) %}
				<div class="col-md-4">
						<div class="custom-card">
						<img src="{{ blog_media.getFilePath() }}" alt="{{ blog.title }} image"/>
							<h2>{{ blog.title }}</h2>
							<div class="d-flex justify-content-end align-items-center">
							<i class="fa-solid fa-star small-image fa-lg align-self-center" style="color: gold;"></i><h6 style="margin-left: 2.5px;">  {{ blog.rating }} </h6></div>
							{# <a href="{{ path('app_blogs_show', { blogs_ID: blog.getBlogsId() }) }}" class="link-offset-2 link-underline link-underline-opacity-0">Read More</a> #}
						</div>
				</div>
			{% endfor %}
		</div>



{% endblock %}
