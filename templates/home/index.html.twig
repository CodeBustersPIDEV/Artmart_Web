{% extends 'front.html.twig' %} 


     {% block content %}
  



{% block stylesheets %}

<style>


.custom-card {
    border-radius: 10px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    margin: 10px;
    padding: 20px;
    display: inline-block;
    width: 100%;
     max-width: 300px; 
    background-color: #232931;
    transition: box-shadow 0.2s ease-in-out;
}

.custom-card:hover {
    box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
    transform: translateY(-2px);
}

.custom-card h2 {
    margin-top: 0px;
    margin-bottom: 10px;
    font-size: 24px;
    color: #FFFFFF;
}

.custom-card p {
    margin-top: 0px;
    color: #FFFFFF;
}

.custom-card a {
    display: inline-block;
    margin-top: 10px;
    padding: 12px 20px;
    background-color: #AA336A;
    color: #FFFFFF;
    border-radius: 5px;
    text-decoration: none;
    transition: background-color 0.2s ease-in-out;
}

.custom-card a:hover {
    background-color: #0D6E72;
}

.custom-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 5px;
    margin-bottom: 10px;
}

.custom-card:nth-child(5n+1) {
    clear: left;
}
.orderby-link {
  display: inline-block;
  padding: 10px 20px;
  border: 1px solid #ddd;
  border-radius: 3px;
  background-color: #f2f2f2;
  color: #333;
  text-decoration: none;
  transition: background-color 0.3s ease;
}

.orderby-link:hover {
  background-color: #ddd;
}
</style>



{% endblock %}

{% block body %}

    <div class="row">
        {% for i in 0..3 %}
            <div class="col-md-3">
                {% if customproducts|length > i %}
                    {% set customproduct = customproducts[i] %}
                    <div class="custom-card">
                        <img src="{{ asset('imagescustom/' ~ customproduct.product.image) }}" alt="{{ customproduct.product.name }} image" />
                        <h2>{{ customproduct.product.name }}</h2>
                        <p>{{ customproduct.product.description }}</p>
            
                        <a href="{{ path('app_customproduct_show', {'customProductId': customproduct.customProductId}) }}">show</a>
                   
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>

{% endblock %}


{% endblock %}