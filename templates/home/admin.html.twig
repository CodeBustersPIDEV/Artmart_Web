 {% block content %}
<center>
  <div class="canvas-container">
    <h4>Custom Products</h4>
    <canvas id="myChart"></canvas>
  </div>
  
  <div class="canvas-container1">
    <h4>Ready Products</h4>
    <canvas id="myChart3"></canvas>
  </div>
<br>
