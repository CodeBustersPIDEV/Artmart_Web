{% extends 'baseC.html.twig' %}

{% block content %}

{% block stylesheets %}

<style>
.table-container {
    display: inline-block;
    vertical-align: top;
    margin-right: 20px;
}
.table {
    border-collapse: collapse;
    width: 100%;
}
.table th,
.table td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
}
.table th {
    background-color: #f2f2f2;
}
.table td.actions {
    text-align: center;
}
.table td.actions a {
    display: inline-block;
    margin: 0 5px;
    padding: 5px 10px;
    background-color: #4CAF50;
    color: white;
    text-decoration: none;
    border-radius: 3px;
    transition: background-color 0.3s ease;
}
.table td.actions a:hover {
    background-color: #3e8e41;
}
.orderby-link {
  display: inline-block;
  padding: 10px 20px;
  border: 1px solid #ddd;
  border-radius: 3px;
  background-color: #f2f2f2;
  color: #333;
  text-decoration: none;
  transition: background-color 0.3s ease;
}

.orderby-link:hover {
  background-color: #ddd;
}

.create-button {
    margin-bottom: 20px;
    text-align: right;
}
.create-button a {
    display: inline-block;
    padding: 10px 20px;
    background-color: #4CAF50;
    color: white;
    text-decoration: none;
    border-radius: 3px;
    transition: background-color 0.3s ease;
}
.create-button a:hover {
    background-color: #3e8e41;
}
.table td img {
    max-width: 100%;
    height: auto;
    width: 100px;
    display: block;
    margin: 0 auto;
    padding: 5px;
}
    /* Styles for the custom products table */
    .custom-products-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .custom-products-container table {
        border-collapse: collapse;
        width: 100%;
    }

    .custom-products-container th,
    .custom-products-container td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    .custom-products-container th {
        background-color: #f2f2f2;
    }

    .custom-products-container td.actions {
        text-align: center;
    }

    .custom-products-container td.actions a {
        display: inline-block;
        margin: 0 5px;
        padding: 5px 10px;
        background-color: #4CAF50;
        color: white;
        text-decoration: none;
        border-radius: 3px;
        transition: background-color 0.3s ease;
    }

    .custom-products-container td.actions a:hover {
        background-color: #3e8e41;
    }

    .custom-products-container td img {
        max-width: 100%;
        height: auto;
        width: 100px;
        display: block;
        margin: 0 auto;
        padding: 5px;
    }

</style>
{% endblock %}

{% block body %}


{% set customproductCount = 0 %}




{% if customproducts %}



<form action="{{ path('app_customproduct_admin') }}" method="GET">
    <div class="form-group">
        <label for="search-term">Search for custom products:</label>
        <input type="text" id="search-term" name="q" class="form-control" value="{{ searchTerm }}">
    </div>

<a href="{{ path('app_customproduct_admin', {'order': 'name'}) }}" class="orderby-link mx-2">Order by Name</a>
<a href="{{ path('app_customproduct_admin', {'order': 'weight'}) }}" class="orderby-link mx-2">Order by Weight</a>
<a href="{{ path('app_customproduct_stat') }}" class="btn btn-danger btn-sm mx-2"><i class="fas fa-chart-bar"></i> Statistics</a>


</form>



 <link rel="stylesheet" href="{{ asset('assets/Components/specialOrder.css') }}"/>
	<a href="{{ path('app_customproduct_newadmin') }}">
		<div data-tooltip="New Product" class="button mid">
			<div class="button-wrapper">
				<div class="text">Create New</div>
				<span class="icon">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus-fill" viewbox="0 0 16 16">
						<path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM8.5 7v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 1 0z"/>
					</svg>
				</span>
			</div>
		</div>
	</a>


 <div class="custom-products-container">
<table class="table">
<thead>
<tr>
<th>Name</th>
<th>Category</th>
<th>Description</th>
<th>Weight</th>
<th>Demension</th>
<th>Material</th>
<th>Image</th>
<th class="actions">Actions</th>
</tr>
</thead>
<tbody>
{% set customproductCount = 0 %}
{% for customproduct in customproducts %}
      {% set customproductCount = customproductCount + 1 %}

<tr>
<td>{{ customproduct.product.name }}</td>
<td>{{ customproduct.product.category }}</td>
<td>{{ customproduct.product.description }}</td>
<td>{{ customproduct.product.weight }}</td>
  <td>{{ customproduct.product.dimensions }}</td>
    <td>{{ customproduct.product.material }}</td>
       <td><img src="{{ asset('imagescustom/' ~ customproduct.product.image) }}" alt="Product Image"></td>
      
<td class="actions">

<a href="{{ path('app_customproduct_editadmin', {'customProductId': customproduct.customProductId}) }}">edit</a>
{{ include('customproduct/delete.html.twig') }}
</td>
</tr>
        {% else %}
            <tr>
                <td colspan="4">No records found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
</div>

  <p>Your total custom product count is: {{ customproductCount }}</p>
{% else %}
<p>No custom products found.</p>
{% endif %}




<div class="row">
  <div class="col-md-6">
    <h2>Categories:</h2>
 <link rel="stylesheet" href="{{ asset('assets/Components/specialOrder.css') }}"/>
	<a href="{{ path('app_categories_new') }}">
		<div data-tooltip="Category" class="button mid">
			<div class="button-wrapper">
				<div class="text">Create New</div>
				<span class="icon">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus-fill" viewbox="0 0 16 16">
						<path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM8.5 7v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 1 0z"/>
					</svg>
				</span>
			</div>
		</div>
	</a>


  
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for category in categories %}
        <tr>
          <td>{{ category.name }}</td>
          <td class="actions">
     
            <a href="{{ path('app_categories_edit', {'categoriesId': category.categoriesId}) }}">Edit</a>
         {{ include('categories/_delete_form.html.twig') }}
          </td>
        </tr>
        {% else %}
        <tr>
          <td colspan="2">No records found.</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
  <div class="col-md-6">
    <h2>Applications:</h2>   <br>  <br>
    <table class="table">
      <thead>
        <tr>
          <th>Product Name</th>
              <th>Client</th>
             <th>Artist</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for apply in applies %}
        <tr>
          <td>{{ apply.customproduct.product.name }}</td>
              <td>{{ apply.customproduct.client}}</td>
             <td>{{ apply.artist }}</td>
          <td>{{ apply.status }}</td>
          <td class="actions">
           <a href="{{ path('app_apply_edit', { applyId: apply.applyId }) }}">Edit</a>
           {{ include('apply/_delete_form.html.twig') }}
           
          </td>
        </tr>
        {% else %}
        <tr>
          <td colspan="3">No records found.</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>




{% endblock %}


{% endblock %}