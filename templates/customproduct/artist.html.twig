<center>
  <form action="{{ path('app_customproduct_artist') }}" method="GET">
  <label  for="criteria">Search by:</label>
    <select id="criteria" name="criteria">
      <option value="name" {% if app.request.query.get('criteria') == 'name' %}selected{% endif %}>Name</option>
      <option value="weight" {% if app.request.query.get('criteria') == 'weight' %}selected{% endif %}>Weight</option>
      <option value="material" {% if app.request.query.get('criteria') == 'material' %}selected{% endif %}>Material</option>
    </select>
    <input type="text" id="search-term" name="q" class="form-control" value="{{ searchTerm }}" placeholder="Search...">
    
  </form>
</center>

    <a  class="orderby-link" href="{{ path('app_apply_accepted') }}">Accepted Works</a>
