{% extends 'baseF.html.twig' %}

{% block content %}



{% block stylesheets %}

<style>

.custom-card {
    border-radius: 10px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    margin: 10px;
    padding: 20px;
    display: inline-block;
    width: 100%;
    background-color: #232931;
    transition: box-shadow 0.2s ease-in-out;
}

.custom-card:hover {
    box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
    transform: translateY(-2px);
}

.custom-card h2 {
    margin-top: 0px;
    margin-bottom: 10px;
    font-size: 24px;
    color: #FFFFFF;
}

.custom-card p {
    margin-top: 0px;
    color: #FFFFFF;
}

.custom-card a {
    display: inline-block;
    margin-top: 10px;
    padding: 12px 20px;
    background-color: #AA336A;
    color: #FFFFFF;
    border-radius: 5px;
    text-decoration: none;
    transition: background-color 0.2s ease-in-out;
}
.custom-card btn {
    display: inline-block;
    margin-top: 10px;
    padding: 12px 20px;
    background-color: #AA336A;
    color: #FFFFFF;
    border-radius: 5px;
    text-decoration: none;
    transition: background-color 0.2s ease-in-out;
}

.custom-card a:hover {
    background-color: #0D6E72;
}

.custom-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 5px;
    margin-bottom: 10px;
}

.custom-card:nth-child(4n+1) {
    clear: left;
}
.link-style {
  display: inline-block;
  padding: 10px 20px;
  margin-right: 20px;
  border-radius: 4px;
  color: white;
  background-color: #43464B;
  font-weight: bold;
  text-decoration: none;
}

.link-style:hover {
  background-color: #3e8e41;
  color: white;}
  .orderby-link {
  display: inline-block;
  padding: 8px 16px;
  background-color: #AA336A;
  color: white;
  text-align: center;
  text-decoration: none;
  font-size: 16px;
  border-radius: 4px;
  transition: background-color 0.3s ease;
}

.orderby-link:hover {
  background-color: #AA336A;
}
.pagination {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}
</style>

{% endblock %}
{% block body %}

{% block title %}
        <h4><em>Custom</em> Products</h4>
{% endblock %}
    <a  class="orderby-link" href="{{ path('app_apply_accepted') }}">Accepted Works</a>
    <div class="card-container">
              {% set customproductCount = 0 %}
{% for customproduct in customproducts %}
    {% if customproductCount % 4 == 0 %}
        <div class="row">
    {% endif %}
    <div class="col-sm-3">
           <div class="custom-card">
                    <img src="{{ asset('imagescustom/' ~ customproduct.product.image) }}" alt="{{ customproduct.product.name }} image"/>
           
                    <h2>{{ customproduct.product.name }}</h2>
                    <p>{{ customproduct.product.description }}</p>
           
               
                    <form action="{{ path('app_customproduct_apply', {'customProductId': customproduct.customProductId}) }}" method="post">
                        <button id="applyBtn-{{ customproduct.customProductId }}" type="submit" class="btn btn-primary">Apply</button>
                    </form>
                    <br>
                     <form action="{{ path('app_customproduct_show', {'customProductId': customproduct.customProductId}) }}" method="get">
                        <button class="btn btn-secondary">Show</button>
                    </form>
              </div>   </div>
      {% set customproductCount = customproductCount + 1 %}

    {% if customproductCount % 4 == 0 %}
        </div>
    {% endif %}
        {% else %}
            <p>No records found.</p>
        {% endfor %}
         {{ knp_pagination_render(customproducts) }}
    </div>




<script>
// Add onclick event to all hyperlinks
var links = document.getElementsByTagName("a");
for (var i = 0; i < links.length; i++) {
  links[i].setAttribute("onclick", "playSound()");
}
var linkss = document.getElementsByTagName("button");
for (var i = 0; i < linkss.length; i++) {
  linkss[i].setAttribute("onclick", "playSound()");
}

// Play sound function
function playSound() {
  var audio = new Audio('{{ asset('js/ab.mp3') }}');
  audio.play();
}
</script>
{% endblock %}

{% endblock %}
