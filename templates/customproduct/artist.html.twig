           <div class="custom-card">
                    <img src="{{ customproduct.product.image }}" alt="{{ customproduct.product.name }} image"/>
           
                    <h2>{{ customproduct.product.name }}</h2>
                    <p>{{ customproduct.product.dimensions }}</p>
           
         <p class="pill">{{ customproduct.product.category }}</p>
             <a  style="background-color: green;" href="{{ path('app_customproduct_apply', {'customProductId': customproduct.customProductId}) }}">Apply</a>
                 <a href="{{ path('app_customproduct_showartist', {'customProductId': customproduct.customProductId}) }}">show</a>
                   
                
  
                       
             
              </div>   </div>
      {% set customproductCount = customproductCount + 1 %}

    {% if customproductCount % 4 == 0 %}
        </div>
