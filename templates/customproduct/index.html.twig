{% extends 'base.html.twig' %}

{% import "base.html.twig" as base %}

{% block title %}
Custom Product Index
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.pagination {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}

.pagination ul {
  display: flex;
  flex-wrap: wrap;
  list-style: none;
  padding: 0;
  margin: 0;
}

.pagination li {
  margin: 0 5px;
  border: 1px solid #ccc;
  border-radius: 3px;
  background-color: #f2f2f2;
}

.pagination li.active {
  background-color: #333;
}

.pagination li span,
.pagination li a {
  display: block;
  padding: 5px 10px;
  text-align: center;
  color: #333;
  text-decoration: none;
  transition: all 0.2s ease-in-out;
}

.pagination li a:hover {
  background-color: #333;
  color: #fff;
}

.pagination li.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.pagination li.disabled span {
  color: #999;
}

body {
  background-color: #F8F9FA;
}
.custom-card {
    border-radius: 10px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    margin: 10px;
    padding: 20px;
    display: inline-block;
    width: 25%;
    background-color: #232931;
    transition: box-shadow 0.2s ease-in-out;
}

.custom-card:hover {
    box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
    transform: translateY(-2px);
}

.custom-card h2 {
    margin-top: 0px;
    margin-bottom: 10px;
    font-size: 24px;
    color: #FFFFFF;
}

.custom-card p {
    margin-top: 0px;
    color: #FFFFFF;
}

.custom-card a {
    display: inline-block;
    margin-top: 10px;
    padding: 12px 20px;
    background-color: #1CB4A7;
    color: #FFFFFF;
    border-radius: 5px;
    text-decoration: none;
    transition: background-color 0.2s ease-in-out;
}

.custom-card a:hover {
    background-color: #0D6E72;
}

.custom-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 5px;
    margin-bottom: 10px;
}

.custom-card:nth-child(4n+1) {
    clear: left;
}
.orderby-link {
  display: inline-block;
  padding: 10px 20px;
  border: 1px solid #ddd;
  border-radius: 3px;
  background-color: #f2f2f2;
  color: #333;
  text-decoration: none;
  transition: background-color 0.3s ease;
}

.orderby-link:hover {
  background-color: #ddd;
}
</style>



{% endblock %}

{% block body %}

{{ base.NavBar() }}
<form action="{{ path('app_customproduct_index') }}" method="GET">
    <div class="form-group">
        <label for="search-term">Search for custom products:</label>
        <input type="text" id="search-term" name="q" class="form-control" value="{{ searchTerm }}">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
    
<a href="{{ path('app_customproduct_admin', {'order': 'name'}) }}" class="orderby-link">Order by Name</a>
<a href="{{ path('app_customproduct_admin', {'order': 'weight'}) }}" class="orderby-link">Order by Weight</a>
</form>



  <a href="{{ path('app_customproduct_new') }}">Create new</a>
{% set totalWeight = customproducts|reduce((total, customproduct) => total + customproduct.product.weight, 0) %}

{% if customproducts.getTotalItemCount() > 0 %}
<p>Your total custom product weight is: {{ totalWeight }}</p>
{% set customproductCount = 0 %}
     
  
    <ul>
        {% for customproduct in customproducts %}

            <div class="custom-card">
                <img src="{{ asset('imagescustom/' ~ customproduct.product.image) }}" alt="{{ customproduct.product.name }} image" />
                <h2>{{ customproduct.product.name }}</h2>
                <p>{{ customproduct.product.description }}</p>
    
                <a href="{{ path('app_customproduct_show', {'customProductId': customproduct.customProductId}) }}">show</a>
                <a href="{{ path('app_customproduct_edit', {'customProductId': customproduct.customProductId}) }}">edit</a>
            </div>
                {% set customproductCount = customproductCount + 1 %}
        {% else %}
            <p>no records found</p>
        {% endfor %}
	  </ul>
      
	 {{ knp_pagination_render(customproducts) }}
<a href="{{ path('app_customproduct_artist') }}">Go to artist page</a>
<a href="{{ path('app_apply_clients') }}">Demands</a>
<a href="{{ path('app_apply_clientdone') }}"
	>check your custom product progress</a>
{% else %}
    <p>No custom products found.</p>
{% endif %}



<script>
// Add onclick event to all hyperlinks
var links = document.getElementsByTagName("a");
for (var i = 0; i < links.length; i++) {
  links[i].setAttribute("onclick", "playSound()");
}
var linkss = document.getElementsByTagName("button");
for (var i = 0; i < linkss.length; i++) {
  linkss[i].setAttribute("onclick", "playSound()");
}

// Play sound function
function playSound() {
  var audio = new Audio('{{ asset('js/ab.mp3') }}');
  audio.play();
}

</script>

{% endblock %}
