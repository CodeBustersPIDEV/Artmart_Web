{% extends 'base.html.twig' %}

{% import "base.html.twig" as base %}

{% block title %}
Custom Product Index
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.custom-card {
    border-radius: 10px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    margin: 10px;
    padding: 20px;
    display: inline-block;
    width: 25%; /* changed from 33.33% */
    background-color: #e9ecef;
    transition: box-shadow 0.2s ease-in-out;
}

.custom-card:hover {
    box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
    transform: translateY(-2px);
}

.custom-card h2 {
    margin-top: 0px;
    margin-bottom: 10px;
    font-size: 24px;
    color: #343a40;
}

.custom-card p {
    margin-top: 0px;
    color: #6c757d;
}

.custom-card a {
    display: inline-block;
    margin-top: 10px;
    padding: 8px 16px;
    background-color: #007bff;
    color: #fff;
    border-radius: 5px;
    text-decoration: none;
    transition: background-color 0.2s ease-in-out;
}

.custom-card a:hover {
    background-color: #0062cc;
}

.custom-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 5px;
    margin-bottom: 10px;
}

.custom-card:nth-child(4n+1) {
    clear: left;
}
</style>

{% endblock %}

{% block body %}
{{ base.NavBar() }}
<form action="{{ path('app_customproduct_index') }}" method="GET">
    <div class="form-group">
        <label for="search-term">Search for custom products:</label>
        <input type="text" id="search-term" name="q" class="form-control" value="{{ searchTerm }}">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<a href="{{ path('app_customproduct_index', {'order': 'name'}) }}">Order by Name</a>
<a href="{{ path('app_customproduct_index', {'order': 'weight'}) }}">Order by Weight</a>

{% if customproducts %}
    <ul>
        {% for customproduct in customproducts %}
            <div class="custom-card">
                <img src="{{ asset('imagescustom/' ~ customproduct.product.image) }}" alt="{{ customproduct.product.name }} image" />
                <h2>{{ customproduct.product.name }}</h2>
                <p>{{ customproduct.product.description }}</p>
                <a href="{{ path('app_customproduct_show', {'customProductId': customproduct.customProductId}) }}">show</a>
                <a href="{{ path('app_customproduct_edit', {'customProductId': customproduct.customProductId}) }}">edit</a>
            </div>
        {% else %}
            <p>no records found</p>
        {% endfor %}
	  </ul>
	  <a href="{{ path('app_customproduct_new') }}">Create new</a>
<a href="{{ path('app_customproduct_artist') }}">Go to artist page</a>
<a href="{{ path('app_apply_clients') }}">Demands</a>
<a href="{{ path('app_apply_clientdone') }}"
	>check your custom product progress</a>
{% else %}
    <p>No custom products found.</p>
{% endif %}

{% endblock %}
