{% extends 'base.html.twig' %}

{% block title %}Customproduct index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .custom-card {
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            margin: 10px;
            padding: 20px;
            display: inline-block;
            width: calc(33.33% - 20px);
            background-color: #E9ECEF;
            transition: box-shadow 0.2s ease-in-out;
        }

        .custom-card:hover {
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
            transform: translateY(-2px);
        }

        .custom-card h2 {
            margin-top: 0px;
            margin-bottom: 10px;
            font-size: 24px;
            color: #343A40;
        }

        .custom-card p {
            margin-top: 0px;
            color: #6C757D;
        }

        .custom-card a {
            display: inline-block;
            margin-top: 10px;
            padding: 8px 16px;
            background-color: #007BFF;
            color: #FFF;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.2s ease-in-out;
        }

        .custom-card a:hover {
            background-color: #0062CC;
        }

        .custom-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 5px;
            margin-bottom: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Customproduct list</h1>

    {% for customproduct in customproducts %}
        <div class="custom-card">
            <img src="{{ asset('imagescustom/' ~ customproduct.product.image) }}" alt="{{ customproduct.product.name }} image">
            <h2>{{ customproduct.product.name }}</h2>
            <p>{{ customproduct.product.description }}</p>
            <a href="{{ path('app_customproduct_show', {'customProductId': customproduct.customProductId}) }}">show</a>
            <a href="{{ path('app_customproduct_edit', {'customProductId': customproduct.customProductId}) }}">edit</a>
        </div>
    {% else %}
        <p>no records found</p>
    {% endfor %}

    <a href="{{ path('app_customproduct_new') }}">Create new</a>
    <a href="{{ path('app_customproduct_artist') }}">Go to artist page</a>
    <a href="{{ path('app_apply_clients') }}">Demands</a>
    <a href="{{ path('app_apply_clientdone') }}">check your custom product progress</a>

{% endblock %}
