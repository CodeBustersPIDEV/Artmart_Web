{% extends 'baseF.html.twig' %}
{% block content %}
{% block title %}
        <h4><em>Custom</em> Products</h4>
{% endblock %}

{% block stylesheets %}
    <style>
    table {
        border-collapse: collapse;
        width: 100%;
        font-family: Arial, sans-serif;
    }

    th, td {
        text-align: left;
        padding: 12px 8px;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f5f5f5;
        font-size: 16px;
    }
    td {
       background-color: #f5f5f5; 
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    img {
        max-width: 200px;
        max-height: 200px;
    }

    .button-group {
        margin-top: 16px;
    }

    .button-group a {
        margin-right: 8px;
        color: #fff;
        background-color: #4CAF50;
        padding: 8px;
        border-radius: 4px;
        text-decoration: none;
    }

    .button-group a:hover {
        background-color: #3e8e41;
    }

    .delete-form {
        display: inline-block;
        margin-left: 8px;
    }
</style>

{% endblock %}

{% block body %}

 

    <table>
        <tbody>
            <tr>
                <th>Product:</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Category:</th>
                <td>{{ product.category }}</td>
            </tr>
            <tr>
                <th>Description:</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Dimensions:</th>
                <td>{{ product.dimensions }}</td>
            </tr>
            <tr>
                <th>Weight:</th>
                <td>{{ product.weight }}</td>
            </tr>
            <tr>
                <th>Material:</th>
                <td>{{ product.material }}</td>
            </tr>
            <tr>
                <th>Image:</th>
                <td><img src="{{ asset('imagescustom/' ~ product.image) }}" alt="Product Image"></td>
            </tr>
        </tbody>
    </table>

    <div class="button-group">
        <a href="{{ path('app_customproduct_index') }}" class="btn btn-secondary">Back to list</a>
      
        {{ include('customproduct/_delete_form.html.twig') }}
    </div>

 <script>
// Add onclick event to all hyperlinks
var links = document.getElementsByTagName("a");
for (var i = 0; i < links.length; i++) {
  links[i].setAttribute("onclick", "playSound()");
}
var linkss = document.getElementsByTagName("button");
for (var i = 0; i < linkss.length; i++) {
  linkss[i].setAttribute("onclick", "playSound()");
}

// Play sound function
function playSound() {
  var audio = new Audio('{{ asset('js/ab.mp3') }}');
  audio.play();
}
</script>
{% endblock %}
{% endblock %}