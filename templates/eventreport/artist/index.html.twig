{% extends 'baseF.html.twig' %} 
{% block content %}
{% block body %}
	{% include('event/artist/eventBar.html.twig') %}

    <link rel="stylesheet" href="{{ asset('assets/Components/specialOrder.css') }}"/>
    <a href="{{ path('app_eventreport_new_artist') }}">
        <div data-tooltip="New Report" class="button mid">
        <div class="button-wrapper">
            <div class="text">Create New</div>
            <span class="icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus-fill" viewbox="0 0 16 16">
                <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM8.5 7v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 1 0z"/>
            </svg>
            </span>
        </div>
        </div>
    </a>

    <div class="row" style="margin:20px">
        {% for eventreport in eventreports %}
            <div class="col-md-4">
                <div class="custom-card">
                    <div class="card-body">
                        <h5 class="card-title">{{ eventreport.event.name }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">&nbsp;&nbsp;{{ eventreport.event.type }}</h6>
                        <p class="card-text"><strong>Date  >  </strong>{{ eventreport.event.startdate ? eventreport.event.startdate|date('d-m-Y') : '' }}<strong>  ~  </strong>{{ eventreport.event.enddate ? eventreport.event.enddate|date('d  -m-Y') : '' }}</p>
                        <p class="card-text"><strong>Location  >  </strong>{{ eventreport.event.location }}</p>
                        <p class="card-text"><strong>Attendance > </strong>{{ eventreport.attendance }}</p>
                        <i><p class="card-text text-muted" style=" float: right; margin-bottom:20px">created at {{ eventreport.createdAt ? eventreport.createdAt|date('d-m-Y H:i') : '' }}</p></i>
                        <a style="margin-top:30px" href="{{ path('app_eventreport_show_artist', {'reportid': eventreport.reportid}) }}" class="btn btn-primary">Show</a>
                        {# <a style="margin-top:30px" href="{{ path('app_eventreport_edit_artist', {'reportid': eventreport.reportid}) }}" class="btn btn-secondary">Edit</a> #}
                    </div>
                </div>
            </div>
        {% else %}
            <p>No records found</p>
        {% endfor %}
    </div>


{% endblock %}
