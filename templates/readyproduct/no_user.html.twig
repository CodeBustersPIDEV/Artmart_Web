{% extends 'baseF.html.twig' %}

{% block content %}

	{% block title %}
		<h4>
			<em>Ready</em>
			Products</h4>
		<p style="color: white; font-size: 100%;">You will need to sign up or sign in to be able to order the product or see its reviews !</p>
		<br>
		<form action="{{ path('app_readyproduct_index') }}" method="GET">
			<div class="form-group">
				<button type="button" style="background-color: #43464B; align: left;" class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
					Order by Price
				</button>
				<ul class="dropdown-menu">
					<li class="d-flex">
						<a class="dropdown-item align-self-center" href="{{ path('app_readyproduct__asc_price_index_no_user') }}">
							<i class="fa-solid fa-sort-up"></i>
							Lowest to highest
						</a>
					</li>
					<li class="d-flex">
						<a class="dropdown-item align-self-center" href="{{ path('app_readyproduct__desc_price_index_no_user') }}">
							<i class="fa-solid fa-sort-down"></i>
							Highest to lowest
						</a>
					</li>
				</ul>
				<select id="category-select" class="orderby-link" name="category">
					<option value="">Order by category</option>
					{% for category in categories %}
						<option class="orderby-option-link" value="{{ category.categoriesId }}">{{ category.name }}</option>
					{% endfor %}
				</select>
				<input type="text" id="searchInput" placeholder="Search..."/>
				<a href="{{ path('app_readyproduct_no_user_index') }}" class="link-style-cancel">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewbox="0 0 16 16">
						<path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
