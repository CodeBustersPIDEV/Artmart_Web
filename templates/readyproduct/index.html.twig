{% block stylesheets %}

<style>
.pagination {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}

.pagination ul {
  display: flex;
  flex-wrap: wrap;
  list-style: none;
  padding: 0;
  margin: 0;
}

.pagination li {
  margin: 0 5px;
  border: 1px solid #ccc;
  border-radius: 3px;
  background-color: #f2f2f2;
}

.pagination li.active {
  background-color: #333;
}

.pagination li span,
.pagination li a {
  display: block;
  padding: 5px 10px;
  text-align: center;
  color: #333;
  text-decoration: none;
  transition: all 0.2s ease-in-out;
}

.pagination li a:hover {
