{% extends 'baseF.html.twig' %}

{% block content %}
<a href="{{ path('app_readyproduct_index') }}">
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewbox="0 0 16 16">
			<path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"/>
		</svg>
		back to list</a>
	{% block title %}
		<br><br>
		<h4>
			<em>Available</em>
			Categories</h4>

		<form action="{{ path('app_readyproduct_cat_index') }}" method="GET">
			<div class="form-group">

				<a href="{{ path('app_readyproduct_new_cat') }}" class="link-style">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewbox="0 0 16 16">
						<path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/>
					</svg>
					Add new category</a>
			</form>
			<br><br>
		{% endblock %}

		<link rel="stylesheet" href="{{ asset('assets/Blog/CSS/BlogList.css') }}"/>

		{% block stylesheets %}

			<style>
				.pagination {
					display: flex;
					justify-content: center;
					margin-top: 20px;
				}

				.pagination ul {
					display: flex;
					flex-wrap: wrap;
					list-style: none;
					padding: 0;
					margin: 0;
				}

				.pagination li {
					margin: 0 5px;
					border: 1px solid #ccc;
					border-radius: 3px;
					background-color: #f2f2f2;
				}

				.pagination li.active {
					background-color: #333;
				}

				.pagination li span,
				.pagination li a {
					display: block;
					padding: 5px 10px;
					text-align: center;
					color: #333;
					text-decoration: none;
					transition: all 0.2s ease-in-out;
				}

				.pagination li a:hover {
					background-color: #333;
					color: #fff;
				}

				.pagination li.disabled {
					opacity: 0.5;
					pointer-events: none;
				}

				.pagination li.disabled span {
					color: #999;
				}

				.ready-card {
					width: 370px;
					max-width: 100%;
					border-radius: 10px;
					box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
					margin: 10px;
					padding: 20px;
					display: flex;
					flex-direction: column;
					background-color: #232931;
					transition: box-shadow 0.2s ease-in-out;
					overflow: hidden;
				}


				.ready-card:hover {
					box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
					transform: translateY(-2px);
				}

				.ready-card p {
					margin-top: 0;
					color: #FFFFFF;
					white-space: nowrap;
					text-overflow: ellipsis;
					overflow: hidden;
					font-weight: bold;
				}

				.ready-card a {
					display: inline-block;
					margin-top: 10px;
					padding: 12px 20px;
					background-color: #AA336A;
					color: #FFFFFF;
					border-radius: 5px;
					text-decoration: none;
					transition: background-color 0.2s ease-in-out;
				}

				.ready-card a:hover {
					background-color: #0D6E72;
				}

				.ready-card img {

					display: inline-block;
					width: 100%;
					height: 200px;
					object-fit: cover;
					border-radius: 5px;
					margin-bottom: 10px;
				}

				.card-container {
					display: flex;
					flex-direction: column;
					flex-wrap: wrap;
					justify-content: space-between;
					margin: 10px;
					padding: 0;
					list-style: none;
					max-width: 100%;
				}

				.col-sm-4 {
					flex-basis: 30%;
				}

				@media(max-width: 992px) {
					.col-sm-4 {
						flex-basis: 48%;
					}
				}

				@media(max-width: 768px) {
					.col-sm-4 {
						flex-basis: 100%;
					}
				}

				.orderby-link {
					display: inline-block;
					background-color: #43464B;
					padding: 4px 5px 5px 9px;
					color: white;
					text-decoration: none;
					font-size: 16px;
					border-radius: 4px;
					border-color: #43464B;
					transition: background-color 0.3s ease;
				}


				.orderby-option-link {
					display: inline-block;
					background-color: white;
					padding: 4px 5px 5px 9px;
					color: black;
					text-decoration: none;
					font-size: 16px;
					border-radius: 4px;
					border-color: #43464B;
					transition: background-color 0.3s ease;
				}

				.orderby-option-link:hover {
					background-color: #e9ecef;
				}

				/* Search Bar */
				.form-control {
					display: inline-block;
					width: 70%;
					padding: 6px 12px;
					font-size: 14px;
					font-weight: 400;
					line-height: 1.5;
					color: #55595c;
					background-color: #fff;
					background-image: none;
					border: 1px solid #ccc;
					border-radius: 4px;
					-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
					box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
					-webkit-transition: border-color ease-in-out 0.15s, -webkit-box-shadow ease-in-out 0.15s;
					transition: border-color ease-in-out 0.15s, -webkit-box-shadow ease-in-out 0.15s;
					transition: box-shadow ease-in-out 0.15s, border-color ease-in-out 0.15s;
					transition: box-shadow ease-in-out 0.15s, border-color ease-in-out 0.15s, -webkit-box-shadow ease-in-out 0.15s;
				}

				.form-control:focus {
					border-color: #66afe9;
					outline: 0;
					-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6);
					box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6);
				}

				.btn-search {
					display: inline-block;
					width: 20%;
					padding: 6px 12px;
					margin-left: 10px;
					font-size: 14px;
					font-weight: 400;
					line-height: 1.5;
					color: #fff;
					background-color: #17a2b8;
					border: 1px solid #17a2b8;
					border-radius: 4px;
					-webkit-transition: background-color ease-in-out 0.15s, border-color ease-in-out 0.15s;
					transition: background-color ease-in-out 0.15s, border-color ease-in-out 0.15s;
					cursor: pointer;
				}

				.btn-search:hover {
					background-color: #117a8b;
					border-color: #10707f;
				}


				.link-style {
					display: inline-block;
					padding: 8px 14px 5px 8px;
					margin-right: 20px;
					border-radius: 4px;
					color: white;
					background-color: #43464B;
					font-weight: bold;
					text-decoration: none;
					float: right;
				}

				.link-style:hover {
					background-color: #3e8e41;
					color: white;
				}

				.link-style-cat {
					display: inline-block;
					padding: 8px 14px 5px 8px;
					margin-right: 20px;
					border-radius: 4px;
					color: white;
					background-color: #43464B;
					font-weight: bold;
					text-decoration: none;
					float: right;
				}

				.link-style-cat:hover {
					background-color: #3e8e41;
					color: white;
				}

				.link-style-cancel {
					display: inline-block;
					padding: 5px 10px;
					margin-right: 20px;
					border-radius: 4px;
					color: white;
					background-color: #43464B;
					font-weight: bold;
					text-decoration: none;
					float: center;
				}

				.link-style-cancel:hover {
					background-color: #AA336A;
					color: white;
				}

				.form-control {
					width: 20%;
				}

				input#search-term {
					float: center;
				}

				#button mid {
					background-color: #AA336A;
				}

				.button {
					button-color: #AA336A;
					background: #AA336A;
				}

				#form-check-label {
					float: center;
					background-color: #FFFFFF;
				}

				.form-check-input:checked {
					background-color: #AA336A;
					border-color: #AA336A;
				}

				.pill {
					display: inline-block;
					background-color: #0D6E72;
					color: #fff;
					border-radius: 20px;
					padding: 2px 5px;
					margin-right: 10px;
					font-size: 70%;
					text-align: left;
					float: right;
				}

				.align {
					text-align: right;
				}

				.align a {
					text-align: right;
					padding: 5px 10px;
				}

				.align-price {
					margin-top: 18px;
					float: left;
				}

				.align-review:hover {
					color: #0D6E72;
				}

				#review {
					display: inline-block;
					padding: 0;
					margin-right: 0;
					border-radius: 0;
					text-color: #0D6E72;
					background-color: initial;
					font-weight: normal;
					text-decoration: none;
					float: none;
				}

				#review:hover {
					color: #0D6E72;
				}

				.desc {
					max-width: 270px;
					overflow: hidden;
					text-overflow: ellipsis;
					white-space: nowrap;
				}
			</style>


		{% endblock %}

		{% block body %}

			<ul class="card-container">
				{% set count = 0 %}
				{% for category in categories %}
					{% if count % 3 == 0 %}
						<div class="row">
						{% endif %}

						<div class="col-sm-4">
							<div class="ready-card sort-item">
								<div id="sort-item-container">
									<p class="sort-value search-value">{{ category.name }}</p>
								</div>
							</div>
						</div>

						{% if count % 3 == 2 %}
						</div>
					{% endif %}

					{% set count = count + 1 %}
				{% else %}
					{% if count % 3 != 0 %}
					</div>
				{% endif %}
				<p>no categories found</p>
			{% endfor %}
		</ul>
	{% endblock %}
{% endblock %}
