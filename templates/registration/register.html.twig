{% extends 'baseF.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
<section class="container my-3">
    <div class="row">
        <div class="col"></div>
    <style>
  label {
    color: white;
  }
  .h1 {
    width: 50%;
    margin: auto;
  }
  .password-field input {
    border: none;
    border-bottom: 2px solid #ddd;
    margin-bottom: 20px;
    padding: 10px;
    font-size: 16px;
}

.password-field input:focus {
    border-bottom: 2px solid #2E9AFE;
}

/* Confirm password field styling */
#confirm_password {
    border: none;
    border-bottom: 2px solid #ddd;
    margin-bottom: 20px;
    padding: 10px;
    font-size: 16px;
}

#confirm_password:focus {
    border-bottom: 2px solid #2E9AFE;
}
  </style>
    <h1>Register</h1>

    <div class="col-sm-12">
      <!-- Start the form and add a class attribute to it -->
      {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
    
      <!-- The input fields for name, username, email, and password -->
      <div class="form-group">
        {{ form_label(registrationForm.name, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Name', 'id': 'name'}}) }}
      </div>
    
      <div class="form-group">
        {{ form_label(registrationForm.username, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control', 'placeholder': 'Username', 'id': 'username'}}) }}
      </div>
    
      <div class="form-group">
        {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email', 'id': 'email'}}) }}
      </div>

      <div class="form-group">
        {{ form_label(registrationForm.phonenumber, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.phonenumber, {'attr': {'class': 'form-control', 'placeholder': 'phoneNumber', 'id': 'phonenumber'}}) }}
      </div>
    
      <!-- The input field for birthday -->
      <div class="form-group">
        {{ form_label(registrationForm.birthday, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.birthday, {'attr': {'class': 'form-control', 'id': 'birthday'}}) }}
      </div>
      

    <div class="form-group">
    {{ form_row(registrationForm.password, {'attr': {'class': 'form-control', 'id': 'password'}}) }}
</div>

  <div class="form-group">
        {{ form_label(registrationForm.role) }}
        {{ form_widget(registrationForm.role, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(registrationForm.file, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.file, {'attr': {'class': 'form-control blogImageFile', 'id': 'formFile'}}) }}
      </div>
      {{ form_label(registrationForm.agreeTerms) }}
      {{ form_widget(registrationForm.agreeTerms) }}
    <br></br>   
        <button type="submit" class="btn">Register</button>
        <button type="submit" class="btn btn-primary" id="submitBtn">
        {{ button_label|default('Register') }}
    </button>
    {{ form_end(registrationForm) }}
</div>
</div>
</div>
</div>

   
</div>
</section>
{% endblock %}
